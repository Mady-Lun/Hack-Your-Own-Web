# ========================================
# APPLICATION SETTINGS
# ========================================
ENV=development
APP_NAME="Hack Your Own Web"
DOMAIN_VERIFICATION_TOKEN_PREFIX="hackyourownweb-verify="

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For local PostgreSQL (Docker):
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/hack_your_own_web

# For Neon (Cloud PostgreSQL) - Replace with your credentials:
# DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/database

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=changeme_supersecret_key_min_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# EMAIL CONFIGURATION
# ========================================
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME="Hack Your Own Web"
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
MAIL_DEBUG=False
USE_CREDENTIALS=True

# ========================================
# CELERY TASK QUEUE
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# OWASP ZAP SCANNER CONFIGURATION
# ========================================
# ZAP runs as a persistent service in docker-compose
# Connection is managed by scanner_manager with connection pooling
ZAP_HOST=zap
ZAP_PORT=8090
ZAP_API_KEY=CHANGE_ME_GENERATE_RANDOM_KEY_HERE

# USE_DOCKER_ZAP: Set to False when using persistent ZAP service (recommended)
# Set to True only for standalone scanner usage (not recommended in production)
USE_DOCKER_ZAP=False
ZAP_DOCKER_IMAGE=ghcr.io/zaproxy/zaproxy:stable

# ========================================
# SCAN TYPES SUPPORTED
# ========================================
# BASIC: Spider + Passive Scan (non-intrusive, no domain verification required)
# FULL:  Spider + Passive + Active Scan (intrusive, requires domain verification)
